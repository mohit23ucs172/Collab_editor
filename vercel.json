{
  "version": 2,
  "projects": [
    {
      "src": "client",
      "use": "@vercel/static-build",
      "buildCommand": "npm install && npm run build",
      "outputDirectory": "dist"
    },
    {
      "src": "server",
      "use": "@vercel/node",
      "functions": {
        "api/**/*.js": {
          "memory": 1024,
          "maxDuration": 10
        }
      }
    }
  ]
}
